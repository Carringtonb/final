<html>

<head>
  <title>Star Wars People</title>
  <link rel="stylesheet" href="/css/reset.css" />
  <link rel="stylesheet" href="/css/style.css" />
  <script id="entry-template" type="text/x-handlebars-template">
    <section data-name="name" data-height="height" data-likes="likes">
      <div class="entry">
        <h2>{{title}}</h2>
        <div class="body">
          {{body}}
        </div>
      </div>
    </section>
  </script>
</head>

<body>
  <header>
    <h1>Star Wars Characters</h1>
    <p>Vote for your favorites to show what you like!</p>
  </header>
  <main>
    <section class="characters">

      <% for(let x = 0; x < results.length; x++) { %>
      <div class="character">
        <header>

          <h2><%= results[x].name %></h2>
        </header>
        <form action="/upvote/<%=results[x].name %> ?_method=PUT" method="POST">
         <input type="text" name="checker" value="<%= results[x].likes %>"> 
         <div onclick="log(results[x])"></div>
          <span><%= results[x].likes || 0 %></span>
          <button>Upvote</button>
      </form>
      </div>
      <% } %>
      <button id="morechars">Get More Characters</button>
    </section>
  </main>
  <footer>
    <strong>&copy; 2020 Code Fellows</strong>
  </footer>
  <script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.2.0/handlebars.min.js"></script>
  <script src="/js/app.js"></script>
</body>

</html>
