<html>

<head>
  <title>Star Wars People</title>
  <link rel="stylesheet" href="/css/reset.css" />
  <link rel="stylesheet" href="/css/base.css" />
  <link rel="stylesheet" href="/css/layout.css" />
  <link rel="stylesheet" href="/css/modules.css" />
  <script id="entry-template" type="text/x-handlebars-template">
    <section legend.names="{{title}}" legend.likes="{{body}}">

      <div class="entry">
        <h2>{{thisChar}}</h2>
        <div class="body">
          {{charLikes}}
        </div>
      </div>
    </script>
  </section>
</head>

<body>
  <header class="header">
    <h1 class="header">Star Wars Characters</h1>
    <p class="header">Vote for your favorites to show what you like!</p>
  </header>
  <main>
    <section class="entry">
        <!-- <h2>{{title}}</h2> -->
        <h2 class ="handlebars" value="title"></h2> 
        <div class="handlebars" value="body"></div> 
        <!-- <div class="body">
          {{body}}
        </div> -->
    </section>

    <section class="characters">

      <% for(let x = 0; x < results.length; x++) { %>
      <div class="character">
        <header class="charBox">

          <h2><%= results[x].name %></h2>
        </header>
        <form class="charBox" action="/upvote/<%=results[x].name %> ?_method=PUT" method="POST">
         <!-- <input type="text" name="checker" value="<%= results[x].likes %>">  -->
         <div onclick="log(results[x])"></div>
          <span class="charBox"><%= results[x].likes || 0 %></span>
          <button id="voteButton">Upvote</button>
      </form>
      </div>
      <% } %>
      <button id="morechars">Get More Characters</button>
    </section>
  </main>
  <footer>
    <strong>&copy; 2020 Code Fellows</strong>
  </footer>
  <script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.2.0/handlebars.min.js"></script>
  <script src="/js/app.js"></script>
</body>

</html>
